      <script>
        document.addEventListener('DOMContentLoaded', function() {
          var openBtn = document.getElementById('openRingSizeSidebar');
          var closeBtn = document.getElementById('closeRingSizeSidebar');
          var sidebar = document.getElementById('ringSizeSidebar');
          var overlay = document.getElementById('ringSizeSidebarOverlay');

          function openSidebar() {
            sidebar.classList.add('open');
            overlay.classList.add('open');
            document.body.classList.add('sidebar-modal-open');
          }
          function closeSidebar() {
            sidebar.classList.remove('open');
            overlay.classList.remove('open');
            document.body.classList.remove('sidebar-modal-open');
          }

          if(openBtn && sidebar && overlay) {
            openBtn.addEventListener('click', openSidebar);
            openBtn.addEventListener('touchend', function(e) {
              e.preventDefault();
              openSidebar();
            });

            if (closeBtn) {
              closeBtn.addEventListener('click', closeSidebar);
              closeBtn.addEventListener('touchend', function(e) {
                e.preventDefault();
                closeSidebar();
              });
            }

            overlay.addEventListener('click', closeSidebar);
            overlay.addEventListener('touchend', function(e) {
              e.preventDefault();
              closeSidebar();
            });

            document.addEventListener('keydown', function(e) {
              if (e.key === 'Escape') closeSidebar();
            });
          }

          // Простой аккордеон
          var accordionButtons = document.querySelectorAll('.ergon-accordion-toggle');

          accordionButtons.forEach(function(button, index) {
            // Открываем первый аккордеон по умолчанию
            if (index === 0) {
              button.parentElement.classList.add('open');
              button.nextElementSibling.style.display = 'block';
            } else {
              button.parentElement.classList.remove('open');
              button.nextElementSibling.style.display = 'none';
            }

            // Добавляем обработчик клика
            button.onclick = function(e) {
              e.preventDefault();
              e.stopPropagation();

              var accordion = this.parentElement;
              var content = this.nextElementSibling;
              var isOpen = accordion.classList.contains('open');

              // Закрываем все аккордеоны
              accordionButtons.forEach(function(btn) {
                btn.parentElement.classList.remove('open');
                btn.nextElementSibling.style.display = 'none';
              });

              // Если был закрыт - открываем
              if (!isOpen) {
                accordion.classList.add('open');
                content.style.display = 'block';
              }
            };
          });

          var video = document.getElementById('ergonRingVideo');
          var playBtn = document.getElementById('ergonPlayBtn');
          if (video && playBtn) {
            video.src = "https://cdn.shopify.com/videos/c/o/v/ff66d1a210824be3a8452cdd1fd6973a.mp4";
            video.controls = false;

            function handlePlay() {
              video.controls = true;
              video.play();
              playBtn.style.display = 'none';
            }

            playBtn.addEventListener('click', handlePlay);
            playBtn.addEventListener('touchend', function(e) {
              e.preventDefault();
              handlePlay();
            });

            video.addEventListener('play', function() {
              playBtn.style.display = 'none';
            });
            video.addEventListener('pause', function() {
              if (video.currentTime === 0 || video.ended) {
                playBtn.style.display = '';
                video.controls = false;
              }
            });
          }
        });
      </script>
