<div class="ring-available-section" style="background: {{ section.settings.background_color | default: '#faf8f5' }};">
  <div class="ring-available-image">
    {%- if section.settings.video_url != blank -%}
      <video preload="metadata" playsinline muted autoplay loop>
        <source src="{{ section.settings.video_url }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    {%- elsif section.settings.image != blank -%}
      <img src="{{ section.settings.image | image_url: width: 1200 }}" alt="Ring">
    {%- else -%}
      {{ 'image' | placeholder_svg_tag: 'placeholder' }}
    {%- endif -%}
  </div>
  <div class="ring-available-info">
    <p style="font-size: 28px; margin-bottom: 30px; font-family: Arial, sans-serif; font-weight: 500; letter-spacing: 1px;">
      AVAILABLE IN
    </p>
    <p style="font-size: 32px; font-style: italic; margin: 10px 0;">{{ section.settings.text }}</p>
  </div>
</div>

<style>
  .ring-available-section {
    display: flex;
    align-items: stretch;
    justify-content: center;
    border-radius: 30px;
    overflow: hidden;
    flex-wrap: wrap;
    flex-direction: row;
    gap: 0;
    height: 600px;
    min-height: 600px;
    max-height: 600px;
    width: 100%;
  }
  @media (max-width: 800px) {
    .ring-available-section {
      flex-direction: column;
      height: auto;
      min-height: unset;
      max-height: unset;
    }
    .ring-available-image, .ring-available-info {
      min-width: 0;
      width: 100%;
      height: auto;
    }
    .ring-available-image img,
    .ring-available-image video {
      width: 100% !important;
      height: auto !important;
      min-height: 200px;
      max-height: 400px;
      object-fit: cover;
    }
  }
  .ring-available-image {
    flex: 1 1 0%;
    min-width: 0;
    min-height: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 100%;
    padding: 0;
    margin: 0;
  }
  .ring-available-image img,
  .ring-available-image video {
    width: 100% !important;
    height: 100% !important;
    object-fit: cover;
    border-radius: 0;
    display: block;
    margin: 0;
    padding: 0;
    max-width: 100% !important;
    max-height: 100% !important;
  }
  .ring-available-info {
    flex: 1;
    min-width: 300px;
    text-align: center;
    font-family: 'Times New Roman', Times, serif;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
</style>

{% schema %}
{
  "name": "Ring",
  "tag": "section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#faf8f5"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL (mp4, optional)"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Ring Image"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Description text",
      "default": "Gold, Rose Gold, Silver"
    }
  ],
  "presets": [
    {
      "name": "Ring"
    }
  ]
}
{% endschema %}
