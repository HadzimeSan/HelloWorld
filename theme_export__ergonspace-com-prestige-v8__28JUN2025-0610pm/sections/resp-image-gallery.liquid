{% schema %}
{
  "name": "Gallery with Rich Button",
  "tag": "section",
  "class": "section",
  "max_blocks": 12,
  "settings": [
    {
      "type": "header",
      "content": "Gallery Settings"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Image Gallery"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "label": "Section Top Padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "label": "Section Bottom Padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "image_spacing",
      "label": "Spacing Between Images",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 10
    },
    {
      "type": "range",
      "id": "image_width_desktop",
      "label": "Image Width (Desktop)",
      "min": 100,
      "max": 800,
      "step": 10,
      "unit": "px",
      "default": 300
    },
    {
      "type": "header",
      "content": "Rich Text Content"
    },
    {
      "type": "richtext",
      "id": "richtext",
      "label": "Text Content",
      "default": "<p>Describe your product or promotion here. Use rich text formatting to engage your visitors.</p>"
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "richtext",
      "id": "button_description",
      "label": "Button Description",
      "default": "<p>Learn more about this offer.</p>"
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description Color",
      "default": "#666666"
    },
    {
      "type": "select",
      "id": "selected_icon",
      "label": "Button Icon",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "arrow-right",
          "label": "Arrow Right"
        },
        {
          "value": "cart",
          "label": "Cart"
        },
        {
          "value": "heart",
          "label": "Heart"
        },
        {
          "value": "checkmark",
          "label": "Checkmark"
        },
        {
          "value": "star",
          "label": "Star"
        },
        {
          "value": "phone",
          "label": "Phone"
        },
        {
          "value": "telegram",
          "label": "Telegram"
        },
        {
          "value": "whatsapp",
          "label": "WhatsApp"
        },
        {
  "value": "facebook",
  "label": "Facebook"
}
      ],
      "default": "arrow-right"
    },
    {
      "type": "select",
      "id": "icon_position",
      "label": "Icon Position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "right"
    },
    {
      "type": "range",
      "id": "icon_size",
      "min": 12,
      "max": 32,
      "step": 1,
      "unit": "px",
      "label": "Icon Size",
      "default": 20
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Button Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "button_radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Button Radius",
      "default": 25
    },
    {
      "type": "range",
      "id": "button_padding",
      "min": 10,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Button Padding",
      "default": 15
    },
    {
      "type": "header",
      "content": "Section Design"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "content_width",
      "min": 400,
      "max": 1200,
      "step": 10,
      "unit": "px",
      "label": "Content Width",
      "default": 800
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Image"
        },
        {
          "type": "range",
          "id": "image_max_width",
          "label": "Image Max Width (%)",
          "min": 10,
          "max": 100,
          "step": 5,
          "unit": "%",
          "default": 100
        },
        {
          "type": "range",
          "id": "image_padding",
          "label": "Image Padding (px)",
          "min": 0,
          "max": 30,
          "step": 1,
          "unit": "px",
          "default": 5
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gallery with Rich Button",
      "category": "Custom",
      "blocks": [
        {
          "type": "image_block"
        },
        {
          "type": "image_block"
        },
        {
          "type": "image_block"
        }
      ],
      "settings": {
        "richtext": "<p>Discover our new collection</p>",
        "button_text": "Shop Now",
        "button_description": "<p>Limited time offer!</p>",
        "selected_icon": "arrow-right"
      }
    }
  ]
}
{% endschema %}

{% style %}
  .gallery-rich-section {
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
    background: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
  }
  
  /* Gallery styles */
  .gallery-container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: nowrap;
    gap: {{ section.settings.image_spacing }}px;
    margin: 0 auto;
    max-width: 100%;
    overflow-x: auto;
    padding: 20px 0;
    scrollbar-width: none;
  }
  
  .gallery-container::-webkit-scrollbar {
    display: none;
  }
  
  .gallery-item {
    flex: 0 0 auto;
    width: {{ section.settings.image_width_desktop }}px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .gallery-item img {
    max-width: 100%;
    height: auto;
    display: block;
    object-fit: contain;
  }
  
  /* Rich content styles */
  .rich-content-wrapper {
    max-width: {{ section.settings.content_width }}px;
    margin: 30px auto 0;
    text-align: {{ section.settings.text_alignment }};
    padding: 0 20px 20px;
  }
  
  .rich-content-wrapper .rte {
    margin-bottom: 30px;
  }
  
  .custom-icon-button {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: {{ section.settings.button_padding }}px;
    background: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text_color }} !important;
    border-radius: {{ section.settings.button_radius }}px;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .custom-icon-button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }
  
  .button-icon {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    display: flex;
    align-items: center;
  }
  
  .button-icon svg {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }
  
  .button-description {
    margin-top: 12px;
    font-size: 14px;
    color: {{ section.settings.description_color }};
  }
  
  /* Responsive adjustments */
  @media (max-width: 1200px) {
    .gallery-item {
      width: calc({{ section.settings.image_width_desktop }}px * 0.9);
    }
  }
  
  @media (max-width: 992px) {
    .gallery-item {
      width: calc({{ section.settings.image_width_desktop }}px * 0.8);
    }
  }
  
  @media (max-width: 768px) {
    .gallery-item {
      width: calc({{ section.settings.image_width_desktop }}px * 0.7);
    }
    
    .rich-content-wrapper {
      margin-top: 20px;
      padding: 0 15px 15px;
    }
  }
  
  @media (max-width: 576px) {
    .gallery-item {
      width: calc({{ section.settings.image_width_desktop }}px * 0.6);
    }
  }
  
  @media (max-width: 480px) {
    .gallery-item {
      width: calc({{ section.settings.image_width_desktop }}px * 0.5);
    }
  }
{% endstyle %}

<div class="gallery-rich-section">
  {% if section.settings.section_title != blank %}
    <h2 style="text-align: center; margin-bottom: 20px;">{{ section.settings.section_title }}</h2>
  {% endif %}
  
  <div class="gallery-container">
    {% for block in section.blocks %}
      <div class="gallery-item" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          <img 
            src="{{ block.settings.image | img_url: '800x' }}" 
            alt="{{ block.settings.image.alt | escape }}"
            style="max-width: {{ block.settings.image_max_width }}%; padding: {{ block.settings.image_padding }}px;"
            loading="lazy"
          >
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
    {% endfor %}
  </div>
  
  <div class="rich-content-wrapper">
    <div class="rte">{{ section.settings.richtext }}</div>
    
    {%- if section.settings.button_text != blank -%}
      <a href="{{ section.settings.button_link }}" class="custom-icon-button" target="_blank">
        {%- if section.settings.icon_position == 'left' and section.settings.selected_icon != 'none' -%}
          <span class="button-icon">
            {%- render 'button-icon', icon: section.settings.selected_icon -%}
          </span>
        {%- endif -%}
        
        {{ section.settings.button_text }}
        
        {%- if section.settings.icon_position == 'right' and section.settings.selected_icon != 'none' -%}
          <span class="button-icon">
            {%- render 'button-icon', icon: section.settings.selected_icon -%}
          </span>
        {%- endif -%}
      </a>
    {%- endif -%}

    {%- if section.settings.button_description != blank -%}
      <div class="button-description">
        {{ section.settings.button_description }}
      </div>
    {%- endif -%}
  </div>
</div>